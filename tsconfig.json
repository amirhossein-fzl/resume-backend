{
    "compilerOptions": {
        "outDir": "dist",
        "target": "esnext",
        "module": "commonjs",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
        "./src/**/*.ts"
    ]
}
